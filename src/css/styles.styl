// Utility
.block-center
  margin 0 auto !important
.text-dark
  color #333 !important
  

theme_background = #FFCC06

// Scaffolding
html, body
  height 100%
  width 100%

body
  font-family 'Lato'
  font-size 1.5rem
  background theme_background
  z-index -101
  
h1, h2
  font-family 'PT Sans'

.menu-container
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  display table
  height 100vh
  width 100%
  background rgba(theme_background, 0.95)
  opacity 0
  z-index -999
  transition opacity 0.5s

  &.open
    opacity 1
    z-index 1

    .menu-content
      z-index 1

  .menu-content
    display table-cell
    text-align center
    vertical-align middle
    text-transform uppercase

    a
      color #0D224E
      letter-spacing 1.5px

      &:hover, &:focus, &:active
        text-decoration none
        border-bottom 2px solid #0D224E

