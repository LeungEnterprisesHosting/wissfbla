      top 15px
      left 5px

    &.open
      position fixed
      top 28px
      left 17px
      margin 0
      padding 0

// Based on http://codepen.io/designcouch/pen/Atyop
.hamburger
  scale = 0.5
  display block
  z-index 2
  width: 60px * scale;
  height: 45px * scale;
  position: relative;
  transform: rotate(0deg);
  transition: .5s ease-in-out;
  cursor: pointer;

  span
    display: block;
    position: absolute;
    height: 9px * scale;
    width: 100%;
    background: #0D224E;
    border-radius: 0px * scale;
    opacity: 1;
    left: 0;
    transform: rotate(0deg);
    transition: .25s ease-in-out;

  span:nth-child(1) {
    top: 0px;
  }

  span:nth-child(2),
  span:nth-child(3) {
    top: 18px * scale;
  }

  span:nth-child(4) {
    top: 36px * scale;
  }

  &.open span:nth-child(1) {
    top: 18px * scale;
    width: 0%;
    left: 50%;
  }

  &.open span:nth-child(2) {
    transform: rotate(45deg);
  }

  &.open span:nth-child(3) {
    transform: rotate(-45deg);
  }

  &.open span:nth-child(4) {
    top: 18px * scale;
    width: 0%;
    left: 50%;
  }

#calendar.open
